{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "removeComments": true,
    "sourceMap": false,
    "outDir": "../lib",
    "declaration": true,
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "genDir": "../dist/ngc"
  },
  "include": [
    "../lib/dist/**/*"
  ]
}
