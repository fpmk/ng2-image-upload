{
  "name": "fpmk-angular2-image-upload",
  "version": "0.8.4",
  "description": "An angular component that uploads images using native browser upload or drag-n-drop.",
  "main": "index.js",
  "scripts": {
    "build": "rimraf -rf lib .tmp demo/src/lib && gulp build",
    "release": "npm run build && npm run build:demo && git add docs && standard-version --commit-all",
    "publish": "git push --follow-tags origin master && npm publish",
    "install:demo": "cd demo && yarn",
    "demo": "cd demo && npm start",
    "build:demo": "cd demo && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aberezkin/ng2-image-upload"
  },
  "keywords": [
    "image",
    "upload",
    "angular",
    "ng",
    "image",
    "preview",
    "file",
    "upload",
    "drag",
    "drop",
    "drag&drop"
  ],
  "author": "Arkadii Berezkin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aberezkin/image-upload/issues"
  },
  "homepage": "https://github.com/aberezkin/image-upload#readme",
  "peerDependencies": {
    "@angular/core": "^4.4.6",
    "@angular/common": "^4.4.6",
    "@angular/http": "^4.4.6",
    "rxjs": "~5.4.0"
  },
  "devDependencies": {
    "@angular/cli": "^1.1.2",
    "@angular/common": "^4.4.6",
    "@angular/compiler": "^4.4.6",
    "@angular/compiler-cli": "^4.4.6",
    "@angular/core": "^4.4.6",
    "@angular/forms": "^4.4.6",
    "@angular/http": "^4.4.6",
    "@angular/language-service": "^4.4.6",
    "@angular/platform-browser": "^4.4.6",
    "@angular/platform-browser-dynamic": "^4.4.6",
    "@angular/router": "^4.4.6",
    "@types/core-js": "^0.9.43",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-inline-ng2-template": "^4.0.0",
    "gulp-ngc": "^0.3.2",
    "rxjs": "~5.5.2",
    "standard-version": "^4.2.0",
    "typescript": "2.5.3"
  },
  "dependencies": {
    "ng2-dragula": "^1.5.0"
  }
